{
    "require-dev": {
        "phpunit/phpunit": "^12.3",
        "phpstan/phpstan": "^1.10",
        "laravel/pint": "^1.13"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "format": "pint",
        "format:check": "pint --test",
        "analyze": "phpstan analyse",
        "quality": [
            "@format:check",
            "@analyze",
            "@test"
        ]
    }
}

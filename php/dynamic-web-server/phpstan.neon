parameters:
    level: 9
    paths:
        - src
        - Logger
        - tests

    # 除外するパス
    excludePaths:
        - vendor

    # Pest関連の設定
    bootstrapFiles:
        - vendor/autoload.php

    # エラーを無視するパターン
    ignoreErrors:

    # 型推論の改善
    inferPrivatePropertyTypeFromConstructor: true

    # strict_types=1 の強制
    treatPhpDocTypesAsCertain: false

    # Pest設定 (Laravel stubは存在しないためコメントアウト)
    # stubFiles:
    #     - vendor/pestphp/pest/stubs/Laravel.php
{
  "name": "takeshi/recursion-curriculum",
  "type": "project",
  "require-dev": {
    "phpunit/phpunit": "^11",
    "pestphp/pest": "^3",
    "phpstan/phpstan": "^2"
  },
  "autoload": {
    "classmap": [
      "oop/src",
      "intermediate",
      "advanced",
      "dynamic-web-server/src"
    ]
  },
  "scripts": {
    "test:oop": "php -d xdebug.mode=off vendor/bin/phpunit -c oop/phpunit.xml",
    "test:intermediate": "php -d xdebug.mode=off vendor/bin/phpunit -c intermediate/phpunit.xml",
    "test:advanced": "php -d xdebug.mode=off vendor/bin/phpunit -c advanced/phpunit.xml",
    "test:dynamic": "php -d xdebug.mode=off vendor/bin/phpunit -c dynamic-web-server/phpunit.xml",
    "test": [
      "@test:oop",
      "@test:intermediate",
      "@test:advanced",
      "@test:dynamic"
    ],
    "stan:oop": "vendor/bin/phpstan analyse oop/src --configuration=oop/phpstan.neon",
    "stan:intermediate": "vendor/bin/phpstan analyse intermediate --configuration=intermediate/phpstan.neon || true",
    "stan": [
      "@stan:oop",
      "@stan:intermediate"
    ]
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}

{
    "autoload": {
        "psr-4": {
            "DynamicWebServer\\": "src/",
            "DynamicWebServer\\Logger\\": "Logger/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "pestphp/pest": "^4.1",
        "phpstan/phpstan": "^2.1"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "pest",
        "test:coverage": "pest --coverage",
        "analyze": "phpstan analyse --memory-limit=512M",
        "quality": [
            "@test",
            "@analyze"
        ]
    }
}
